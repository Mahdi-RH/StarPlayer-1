<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/padding_all_16dp"
    android:paddingTop="@dimen/padding_all_8dp"
    android:paddingEnd="@dimen/padding_all_16dp"
    android:paddingBottom="@dimen/padding_all_8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_music"
        android:layout_width="@dimen/width_all_48dp"
        android:layout_height="@dimen/width_all_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_all_8dp"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintLeft_toRightOf="@+id/img_music"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_music_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@android:"
        android:layout_marginStart="@dimen/margin_all_8dp"
        android:layout_marginTop="@dimen/margin_all_2dp"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintLeft_toRightOf="@+id/img_music"
        app:layout_constraintTop_toBottomOf="@+id/txt_music_title" />


</androidx.constraintlayout.widget.ConstraintLayout>